# Desactivar listado de directorios
Options -Indexes

# Bloquear acceso a archivos sensibles
<FilesMatch "^(\.env|composer(\.json|\.lock)|\.git|\.htaccess)$">
  Require all denied
</FilesMatch>

# Forzar UTF-8
AddDefaultCharset utf-8

# Seguridad (requiere mod_headers)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Reescrituras básicas: todo a index.php si no existe archivo/directorio físico
<IfModule mod_rewrite.c>
  RewriteEngine On
  # RewriteBase /mi-pesca/public_html/   # <-- solo descomenta si tu Apache local lo requiere
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.php [QSA,L]
</IfModule>
